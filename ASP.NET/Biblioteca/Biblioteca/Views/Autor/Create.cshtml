@model Biblioteca.Models.Autor

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar um Autor</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row background-form">
            <div class="input-field col s6">
                <i class="material-icons prefix">library_books</i>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="input-field col s3 offset-s1" style="margin-top: 23px;">
                <button class="btn waves-effect waves-light blue-grey" type="submit" name="action">
                    Salvar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
        
    </div>
}

