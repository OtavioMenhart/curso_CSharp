@model Biblioteca.Models.Emprestimo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Emprestimo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ClienteId)
        @Html.HiddenFor(model => model.LivroID)
        @Html.HiddenFor(model => model.DataDevolucao)
        @Html.HiddenFor(model => model.DataEmprestimo)

        <div class="row background-form">
            <div class="row">
                <div class="col s6">
                    @Html.LabelFor(model => model.DataDeEntregaDoLivro, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataDeEntregaDoLivro, new { htmlAttributes = new { @class = "form-control data" } })
                        @Html.ValidationMessageFor(model => model.DataDeEntregaDoLivro, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col s3" style="margin-top: 25px;">
                    <input type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </div>


        </div>
    </div>
}

