<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControlesVisuais.Controles.EntryEditorPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry 
                x:Name="txtIdade"
                Text=""
                TextColor="Red"
                Placeholder="Digite sua idade"
                PlaceholderColor="Blue"
                IsPassword="False"
                
                Keyboard="Numeric"                
                
                BackgroundColor="#CCCCCC"
                />
            <!--InputView-->


            <Label x:Name="lbl_Duplicado" />
            <!--Para textos maiores-->
            <Editor x:Name="txtComentario" HeightRequest="200"/>
            <Label x:Name="lblQtdCaracteres" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>